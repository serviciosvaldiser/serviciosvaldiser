---
import 'swiper/css';
import 'swiper/css/autoplay';

const images = [
  "./img/casa-andina.png",
  "./img/dora.webp",
  "./img/santaLucia.jpg",
  "./img/limaGas.png",
  "./img/crediScotia.png",
  "./img/tgestiona.png",
  "./img/MarVerde.png",
];

const duplicatedImages = [...images, ...images]; // Repetimos para bucle infinito
---

<!-- Sección Clientes -->
<section class="overflow-hidden w-full bg-gray-100 py-10">
  <div class="max-w-7xl mx-auto text-center px-4">
    <h2 class="text-3xl font-bold text-blue-900 mb-4">Nuestros Clientes</h2>
    <p class="text-gray-600 mb-12 max-w-2xl mx-auto">
      Diversas empresas e instituciones confían en VALDISER por nuestra experiencia, responsabilidad y calidad de servicio.
    </p>
  </div>

  <div class="relative">
    <div class="carousel-track flex animate-marquee">
      {duplicatedImages.map((img, index) => (
        <div
          class="flex-none w-1/2 sm:w-1/3 md:w-1/4 px-2 md:px-4"
        >
          <img
            src={img}
            alt={`Imagen ${index + 1}`}
            class="w-full h-32 md:h-48 object-contain rounded-lg shadow-md bg-white p-2"
          />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 25s linear infinite;
  }
</style>
