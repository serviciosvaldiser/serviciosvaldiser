<!-- Sección de Contacto -->
<section class="bg-white py-20 px-6" id="contacto">
  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">

    <!-- Formulario de contacto -->
    <div>
      <h2 class="text-4xl font-bold text-blue-900 mb-4">Contáctanos</h2>
      <p class="text-gray-600 mb-8 text-base">
        ¿Tienes un proyecto en mente? Escríbenos y te responderemos lo antes posible.
      </p>
      <form class="space-y-6">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Nombre</label>
          <input type="text" placeholder="Tu nombre"
            class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm shadow-sm transition focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600"
            required>
        </div>
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Correo electrónico</label>
          <input type="email" placeholder="tucorreo@email.com"
            class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm shadow-sm transition focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600"
            required>
        </div>
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">Mensaje</label>
          <textarea rows="5" placeholder="Escribe tu mensaje..."
            class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm shadow-sm transition focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600"
            required></textarea>
        </div>
        <button type="submit"
          class="bg-blue-800 hover:bg-blue-900 text-white font-semibold px-6 py-3 rounded-lg transition duration-300 shadow-md hover:shadow-lg">
          Enviar mensaje
        </button>
      </form>
    </div>

    <!-- Información de contacto -->
    <div class="bg-blue-50 p-10 rounded-xl shadow-lg">
      <h3 class="text-2xl font-bold text-blue-800 mb-6">Información de contacto</h3>
      <ul class="space-y-6 text-gray-700 text-base">
        <li class="flex items-start gap-4">
          <i class="fas fa-map-marker-alt text-blue-700 mt-1"></i>
          <span>AA.HH. Ignacio Merino MZ H L-18, Calle Las Flores, Piura</span>
        </li>
        <li class="flex items-start gap-4">
          <i class="fas fa-phone-alt text-blue-700 mt-1"></i>
          <span>+51 969 657 831</span>
        </li>
        <li class="flex items-start gap-4">
          <i class="fas fa-envelope text-blue-700 mt-1"></i>
          <span>serviciosgenerales@hotmail.com</span>
        </li>
        <li class="flex items-start gap-4">
          <i class="fas fa-clock text-blue-700 mt-1"></i>
          <span>Lunes a Sábado: 8:00 a.m. – 6:00 p.m.</span>
        </li>
      </ul>

      <!-- Mapa -->
      <div class="mt-8 rounded-xl overflow-hidden border-4 border-blue-200 shadow-lg">
        <iframe
          class="w-full h-64"
          src="https://www.google.com/maps?q=AA.HH.%20Ignacio%20Merino%20MZ%20H%20L-18%20Calle%20Las%20Flores,%20Piura,%20Perú&output=embed"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>

  </div>
</section>
